{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Issuer": "CloakAPI",
    "Audience": "CloakAPI.Clients",
    "Key": "CHANGE_ME_TO_A_LONG_RANDOM_SECRET_AT_LEAST_32_CHARS"
  },
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=cloak_audit;Username=postgres;Password=postgres"
  },
  "ReverseProxy": {
    "Routes": {
      "routeApi": {
        "ClusterId": "backend",
        "Match": { "Path": "/api/{**catch-all}" },
        "Transforms": [{ "PathRemovePrefix": "/api" }]
      },
      "routeAuth": {
        "ClusterId": "backend",
        "Match": { "Path": "/auth/{**catch-all}" }
      }
    },
    "Clusters": {
      "backend": {
        "Destinations": {
          "destination1": {
            "Address": "http://api:8081/"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}